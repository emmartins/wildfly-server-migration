<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.wildfly.migration</groupId>
        <artifactId>wildfly-server-migration-parent</artifactId>
        <version>1.0.0.Alpha1-SNAPSHOT</version>
    </parent>

    <artifactId>wildfly-server-migration-build</artifactId>

    <name>WildFly Server Migration: Build</name>
    <packaging>pom</packaging>

    <properties>
        <assemblyInputDirectory>${project.build.directory}/wildfly-server-migration</assemblyInputDirectory>
    </properties>

    <dependencies>
<!--
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>wildfly-server-migration-core</artifactId>
        </dependency>       
-->
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>wildfly-server-migration-cli</artifactId>
        </dependency>       

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>wildfly-server-migration-eap6</artifactId>
        </dependency>       

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>wildfly-server-migration-eap6-to-wildfly10</artifactId>
        </dependency>       

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>wildfly-server-migration-eap7</artifactId>
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>wildfly-server-migration-wildfly8</artifactId>
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>wildfly-server-migration-wildfly8-to-wildfly10</artifactId>
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>wildfly-server-migration-wildfly9</artifactId>
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>wildfly-server-migration-wildfly9-to-wildfly10</artifactId>
        </dependency>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>wildfly-server-migration-wildfly10</artifactId>
        </dependency>       

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>assemble</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>assembly.xml</descriptor>
                            </descriptors>
                            <finalName>wildfly-server-migration-${project.version}</finalName>
                            <appendAssemblyId>false</appendAssemblyId>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
